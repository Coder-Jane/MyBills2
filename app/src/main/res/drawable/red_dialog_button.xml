<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="3dp" android:left="3dp">
        <shape>
            <corners
                android:radius="8dp"
                />
            <solid
                android:color="#871C20"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <margin
                android:left="0dp"
                android:top="3dp"
                android:right="0dp"
                android:bottom="3dp"
                />
            <size
                android:width="200dp"
                android:height="25dp"
                />
        </shape>
    </item>
    <item android:bottom="3dp" android:right="3dp">
        <shape android:shape="rectangle">
            <corners
                android:radius="8dp"
                />
            <solid
                android:color="#E05563"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <margin
                android:left="0dp"
                android:top="3dp"
                android:right="0dp"
                android:bottom="3dp"
                />
            <size
                android:width="200dp"
                android:height="25dp"
                />
        </shape>
    </item>
</layer-list>