<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:top="3dp" android:left="3dp">
    <shape>
        <corners
            android:radius="8dp"
            />
        <solid
            android:color="#357522"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="100dp"
            android:height="20dp"
            />
    </shape>
</item>
<item android:bottom="3dp" android:right="3dp">
    <shape android:shape="rectangle">
        <corners
            android:radius="8dp"
            />
        <solid
            android:color="#84E08A"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="100dp"
            android:height="20dp"
            />
    </shape>
</item>
</layer-list>